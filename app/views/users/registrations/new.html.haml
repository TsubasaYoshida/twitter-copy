.sign-up
  .logo Cwitter
  %h1.sign-up__title ユーザー登録
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .form-group
      = f.input :screen_name, label: false, input_html: {class: 'input-text'}
    .form-group
      = f.input :email, label: false, input_html: {autofocus: true, autocomplete: "email", class: 'input-text'}
    .form-group
      = f.input :password, label: false, input_html: {autocomplete: "new-password", class: 'input-text'}
    .form-group
      = f.input :password_confirmation, label: false, input_html: {autocomplete: "new-password", class: 'input-text'}
    .form-group
      = f.button :submit, class: 'button'
  = render "users/shared/links"
